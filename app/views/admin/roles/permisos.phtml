<script>
$(document).ready(function() {
    // Contar permisos
    function actualizarContadores() {
        var total = $('.permiso-checkbox').length;
        var seleccionados = $('.permiso-checkbox:checked').length;
        
        $('#total-permisos').text(total);
        $('#total-seleccionados').text(seleccionados);
    }
    
    // Seleccionar todos los permisos
    $('#select-all').click(function() {
        $('.permiso-checkbox').prop('checked', true);
        actualizarContadores();
    });
    
    // Deseleccionar todos los permisos
    $('#deselect-all').click(function() {
        $('.permiso-checkbox').prop('checked', false);
        actualizarContadores();
    });
    
    // Seleccionar todos los permisos de un módulo
    $('.select-modulo').change(function() {
        var modulo = $(this).data('modulo');
        var checked = $(this).prop('checked');
        
        $('.permiso-checkbox[data-modulo="' + modulo + '"]').prop('checked', checked);
        $('.select-categoria[data-modulo="' + modulo + '"]').prop('checked', checked);
        
        actualizarContadores();
    });
    
    // Seleccionar todos los permisos de una categoría
    $('.select-categoria').change(function() {
        var modulo = $(this).data('modulo');
        var categoria = $(this).data('categoria');
        var checked = $(this).prop('checked');
        
        $('.permiso-checkbox[data-modulo="' + modulo + '"][data-categoria="' + categoria + '"]')
            .prop('checked', checked);
        
        // Verificar si todos los permisos del módulo están seleccionados
        var totalModulo = $('.permiso-checkbox[data-modulo="' + modulo + '"]').length;
        var seleccionadosModulo = $('.permiso-checkbox[data-modulo="' + modulo + '"]:checked').length;
        
        $('.select-modulo[data-modulo="' + modulo + '"]')
            .prop('checked', totalModulo === seleccionadosModulo);
        
        actualizarContadores();
    });
    
    // Cuando se cambia un permiso individual
    $('.permiso-checkbox').change(function() {
        var modulo = $(this).data('modulo');
        var categoria = $(this).data('categoria');
        
        // Verificar categoría
        var totalCategoria = $('.permiso-checkbox[data-modulo="' + modulo + '"][data-categoria="' + categoria + '"]').length;
        var seleccionadosCategoria = $('.permiso-checkbox[data-modulo="' + modulo + '"][data-categoria="' + categoria + '"]:checked').length;
        
        $('.select-categoria[data-modulo="' + modulo + '"][data-categoria="' + categoria + '"]')
            .prop('checked', totalCategoria === seleccionadosCategoria);
        
        // Verificar módulo
        var totalModulo = $('.permiso-checkbox[data-modulo="' + modulo + '"]').length;
        var seleccionadosModulo = $('.permiso-checkbox[data-modulo="' + modulo + '"]:checked').length;
        
        $('.select-modulo[data-modulo="' + modulo + '"]')
            .prop('checked', totalModulo === seleccionadosModulo);
        
        actualizarContadores();
    });
    
    // Inicializar contadores
    actualizarContadores();
});
</script>