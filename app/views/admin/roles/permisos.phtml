<script>
document.addEventListener('DOMContentLoaded', function() {
    // Contar permisos
    function actualizarContadores() {
        var checkboxes = document.querySelectorAll('.permiso-checkbox');
        var total = checkboxes.length;
        var seleccionados = document.querySelectorAll('.permiso-checkbox:checked').length;
        
        var totalElement = document.getElementById('total-permisos');
        var seleccionadosElement = document.getElementById('total-seleccionados');
        
        if (totalElement) totalElement.textContent = total;
        if (seleccionadosElement) seleccionadosElement.textContent = seleccionados;
    }
    
    // Seleccionar todos los permisos
    var selectAllBtn = document.getElementById('select-all');
    if (selectAllBtn) {
        selectAllBtn.addEventListener('click', function() {
            var checkboxes = document.querySelectorAll('.permiso-checkbox');
            checkboxes.forEach(function(checkbox) {
                checkbox.checked = true;
            });
            actualizarContadores();
        });
    }
    
    // Deseleccionar todos los permisos
    var deselectAllBtn = document.getElementById('deselect-all');
    if (deselectAllBtn) {
        deselectAllBtn.addEventListener('click', function() {
            var checkboxes = document.querySelectorAll('.permiso-checkbox');
            checkboxes.forEach(function(checkbox) {
                checkbox.checked = false;
            });
            actualizarContadores();
        });
    }
    
    // Seleccionar todos los permisos de un módulo
    var moduloSelectors = document.querySelectorAll('.select-modulo');
    moduloSelectors.forEach(function(selector) {
        selector.addEventListener('change', function() {
            var modulo = this.dataset.modulo;
            var checked = this.checked;
            
            // Seleccionar permisos del módulo
            var permisosModulo = document.querySelectorAll('.permiso-checkbox[data-modulo="' + modulo + '"]');
            permisosModulo.forEach(function(checkbox) {
                checkbox.checked = checked;
            });
            
            // Seleccionar categorías del módulo
            var categoriasModulo = document.querySelectorAll('.select-categoria[data-modulo="' + modulo + '"]');
            categoriasModulo.forEach(function(checkbox) {
                checkbox.checked = checked;
            });
            
            actualizarContadores();
        });
    });
    
    // Seleccionar todos los permisos de una categoría
    var categoriaSelectors = document.querySelectorAll('.select-categoria');
    categoriaSelectors.forEach(function(selector) {
        selector.addEventListener('change', function() {
            var modulo = this.dataset.modulo;
            var categoria = this.dataset.categoria;
            var checked = this.checked;
            
            // Seleccionar permisos de la categoría
            var permisosCategoria = document.querySelectorAll(
                '.permiso-checkbox[data-modulo="' + modulo + '"][data-categoria="' + categoria + '"]'
            );
            
            permisosCategoria.forEach(function(checkbox) {
                checkbox.checked = checked;
            });
            
            // Verificar si todos los permisos del módulo están seleccionados
            var totalModulo = document.querySelectorAll('.permiso-checkbox[data-modulo="' + modulo + '"]').length;
            var seleccionadosModulo = document.querySelectorAll(
                '.permiso-checkbox[data-modulo="' + modulo + '"]:checked'
            ).length;
            
            var moduloSelector = document.querySelector('.select-modulo[data-modulo="' + modulo + '"]');
            if (moduloSelector) {
                moduloSelector.checked = (totalModulo === seleccionadosModulo);
            }
            
            actualizarContadores();
        });
    });
    
    // Cuando se cambia un permiso individual
    var permisosIndividuales = document.querySelectorAll('.permiso-checkbox');
    permisosIndividuales.forEach(function(checkbox) {
        checkbox.addEventListener('change', function() {
            var modulo = this.dataset.modulo;
            var categoria = this.dataset.categoria;
            
            // Verificar categoría
            var totalCategoria = document.querySelectorAll(
                '.permiso-checkbox[data-modulo="' + modulo + '"][data-categoria="' + categoria + '"]'
            ).length;
            
            var seleccionadosCategoria = document.querySelectorAll(
                '.permiso-checkbox[data-modulo="' + modulo + '"][data-categoria="' + categoria + '"]:checked'
            ).length;
            
            var categoriaSelector = document.querySelector(
                '.select-categoria[data-modulo="' + modulo + '"][data-categoria="' + categoria + '"]'
            );
            
            if (categoriaSelector) {
                categoriaSelector.checked = (totalCategoria === seleccionadosCategoria);
            }
            
            // Verificar módulo
            var totalModulo = document.querySelectorAll('.permiso-checkbox[data-modulo="' + modulo + '"]').length;
            var seleccionadosModulo = document.querySelectorAll(
                '.permiso-checkbox[data-modulo="' + modulo + '"]:checked'
            ).length;
            
            var moduloSelector = document.querySelector('.select-modulo[data-modulo="' + modulo + '"]');
            if (moduloSelector) {
                moduloSelector.checked = (totalModulo === seleccionadosModulo);
            }
            
            actualizarContadores();
        });
    });
    
    // Inicializar contadores
    actualizarContadores();
});
</script>