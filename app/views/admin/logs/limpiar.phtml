<script>
// Validación adicional en cliente
document.getElementById('form-limpiar').addEventListener('submit', function(e) {
    const dias = document.getElementById('dias-input').value;
    const confirmCheckbox = document.querySelector('input[name="confirm_understanding"]');
    
    if (parseInt(dias) < 7) {
        if (!confirm('¿Está seguro de conservar menos de 7 días de logs? Esto podría afectar la auditoría.')) {
            e.preventDefault();
            return false;
        }
    }
    
    if (!confirmCheckbox.checked) {
        alert('Debe confirmar que comprende que esta acción no se puede deshacer');
        e.preventDefault();
        return false;
    }
    
    const btn = e.submitter;
    if (btn.name === 'confirmar') {
        return confirm('¿ESTÁ ABSOLUTAMENTE SEGURO?\n\nEsta acción ELIMINARÁ PERMANENTEMENTE los registros antiguos.\nNo se puede deshacer.');
    }
    
    return true;
});
</script>