    $(function() {
        // Inicializar menú jQuery UI
        $("#menubar").menu({
            position: { my: "left top", at: "left bottom" },
            blur: function() {
                $(this).menu("option", "position", { my: "left top", at: "left bottom" });
            },
            focus: function(e, ui) {
                if ($(this).find(ui.item).children("[aria-haspopup='true']").length) {
                    $(this).menu("option", "position", { my: "left top", at: "right top" });
                }
            }
        });
        
        // Submenús al pasar el ratón
        $(".ui-menu-item").hover(
            function() {
                $(this).find("> .ui-menu").show();
            },
            function() {
                $(this).find("> .ui-menu").hide();
            }
        );
        
        // Confirmación para acciones de borrado
        $(".btn-delete").on("click", function(e) {
            if (!confirm("¿Está seguro de que desea eliminar este registro? Esta acción no se puede deshacer.")) {
                e.preventDefault();
            }
        });
        
        // Select2 para selects múltiples (si se usan)
        $("select[multiple]").each(function() {
            $(this).css("width", "100%").css("height", "150px");
        });
    });
